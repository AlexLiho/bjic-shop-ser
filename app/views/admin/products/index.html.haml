%h1 Listing products

%table.table.table-hover
  %thead
    %tr
      %th Name
      %th Price
      %th Image
      %th
      %th

  %tbody
    - @products.each do |product|
      %tr
        %td= link_to product.name, edit_admin_product_path(product)
        %td= number_to_currency product.price
        %td= image_tag product.image.thumb
        %td= link_to 'Show', admin_product_path(product)
        %td= link_to 'Destroy', admin_product_path(product), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Product', new_admin_product_path, class: "btn btn-primary"
